{
  "name": "book-platform",
  "version": "1.0.0",
  "description": "MERN Book Platform with Admin/User roles",
  "main": "index.js",
  "scripts": {
    "start": "node server/index.js",
    "server": "nodemon server/index.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "install-client": "cd client && npm install",
    "install-server": "npm install",
    "install-all": "npm run install-server && npm run install-client",
    "build": "cd client && npm run build"
  },
  "keywords": [
    "mern",
    "book",
    "platform"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "epub-gen": "^0.1.0",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "html-pdf": "^3.0.1",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.3",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.3",
    "puppeteer": "^19.8.3",
    "razorpay": "^2.9.6",
    "stripe": "^18.1.0"
  },
  "devDependencies": {
    "concurrently": "^8.0.1",
    "nodemon": "^2.0.22"
  }
}
